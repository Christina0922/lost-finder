<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/orange_500">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            android:contentDescription="뒤로가기" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="분실물 목록"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp" />

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            android:contentDescription="새로고침" />

        <Button
            android:id="@+id/btnSort"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="정렬"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_sort_button"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- 목록 영역 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- 빈 상태 메시지 -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="등록된 분실물이 없습니다.\n분실물을 등록해보세요!"
        android:textSize="16sp"
        android:textColor="@color/gray_500"
        android:gravity="center"
        android:visibility="gone" />

    <!-- 페이지네이션 레이아웃 -->
    <LinearLayout
        android:id="@+id/paginationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_100"
        android:padding="12dp"
        android:visibility="gone">

        <!-- 페이지 정보 -->
        <TextView
            android:id="@+id/tvPageInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 / 1 (총 0개)"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- 페이지네이션 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnPrevPage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="◀ 이전"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_pagination_button"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnNextPage"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="다음 ▶"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_pagination_button"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- 하단 광고 배너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_ad_banner"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔍 분실 방지 용품 인기 상품 모음 👀"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="내 소지품을 지키는 스마트한 아이템 모음"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="start"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="쿠팡에서 보기"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:background="@drawable/bg_ad_button"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout> 
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="분실물 찾기"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_manage"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/gray_600"
            android:contentDescription="설정" />

    </LinearLayout>

    <!-- 로그인 전 상태 -->
    <LinearLayout
        android:id="@+id/loginBeforeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인이 필요합니다"
            android:textSize="16sp"
            android:textColor="@color/gray_600"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="로그인"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/blue_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="회원가입"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/green_500" />

    </LinearLayout>

    <!-- 로그인 후 상태 -->
    <LinearLayout
        android:id="@+id/loginAfterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- 사용자 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="사용자님"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="로그아웃"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/gray_400" />

        </LinearLayout>

        <!-- 메뉴 버튼들 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="분실물 등록하기"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/green_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnListView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="목록 보기"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/blue_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReviews"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="후기 보기"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/orange_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGame"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="기다리면서 게임하기"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/purple_500" />

    </LinearLayout>

    <!-- 하단 광고 배너 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_ad_banner"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👀 분실 방지 용품 인기 상품 모음"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="start" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AirTag, 가방 위치 추적기, 열쇠고리형 블루투스 위치기기"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="start"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnCoupang"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="쿠팡에서 보기"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_ad_button_white"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>

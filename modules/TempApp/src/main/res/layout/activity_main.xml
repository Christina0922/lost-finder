<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F2F2F7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

                 <!-- 상단 헤더 -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#10B981"
             android:orientation="vertical">
             
             <!-- LostFinder 제목 -->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:padding="16dp"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">
                 
                 <TextView
                     android:id="@+id/tvTitle"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="🔍 LostFinder"
                     android:textColor="#FFFFFF"
                     android:textStyle="bold"
                     android:textSize="24sp"
                     android:clickable="true"
                     android:focusable="true"
                     android:background="?android:attr/selectableItemBackground" />
             </LinearLayout>
             
                           <!-- 버튼들 -->
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="78dp"
                  android:padding="16dp"
                  android:gravity="center"
                  android:orientation="horizontal">

                         <!-- 분실물 찾기 버튼 -->
                           <LinearLayout
                  android:id="@+id/btnSearch"
                  android:layout_width="0dp"
                  android:layout_height="78dp"
                  android:layout_weight="1"
                  android:background="@drawable/rounded_button_green"
                  android:padding="6dp"
                  android:gravity="center"
                  android:layout_marginEnd="4dp">

                                                                       <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="분실물 찾기"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:textSize="14sp"
                       android:alpha="1.0" />
             </LinearLayout>

             <!-- 이전 화면 버튼 -->
                           <LinearLayout
                  android:id="@+id/btnBack"
                  android:layout_width="0dp"
                  android:layout_height="78dp"
                  android:layout_weight="1"
                  android:background="@drawable/rounded_button_gray"
                  android:padding="6dp"
                  android:gravity="center"
                  android:layout_marginEnd="4dp">

                                   <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="이전"
                      android:textColor="#333333"
                      android:textStyle="bold"
                      android:textSize="14sp" />
             </LinearLayout>

             <!-- 로그인 버튼 -->
                           <LinearLayout
                  android:id="@+id/btnLogin"
                  android:layout_width="0dp"
                  android:layout_height="78dp"
                  android:layout_weight="1"
                  android:background="@drawable/rounded_button_green"
                  android:padding="6dp"
                  android:gravity="center"
                  android:layout_marginEnd="4dp">

                                                                       <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="로그인"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:textSize="13sp"
                       android:alpha="1.0" />
             </LinearLayout>

             <!-- 설정 버튼 -->
                           <LinearLayout
                  android:id="@+id/btnSettings"
                  android:layout_width="0dp"
                  android:layout_height="78dp"
                  android:layout_weight="1"
                  android:background="@drawable/rounded_button_green"
                  android:padding="6dp"
                  android:gravity="center">

                                                                       <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="설정"
                       android:textColor="#000000"
                       android:textStyle="bold"
                       android:textSize="13sp"
                                              android:alpha="1.0" />
               </LinearLayout>
             </LinearLayout>
         </LinearLayout>

                 <!-- 안내 문구 -->
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="잃어버린 물건을 쉽게 찾으세요"
             android:textColor="#555555"
             android:textSize="16sp"
             android:gravity="center"
             android:padding="12dp"
             android:layout_marginTop="8dp" />

        <!-- 카드 컨테이너 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

                         <!-- 1. 분실물 등록하기 -->
                           <LinearLayout
                  android:id="@+id/btnRegister"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="16dp"
                  android:background="@drawable/rounded_card"
                  android:elevation="3dp"
                  android:padding="16dp"
                  android:orientation="horizontal">

                                   <TextView
                      android:layout_width="42dp"
                      android:layout_height="42dp"
                      android:text="➕"
                      android:textSize="24sp"
                      android:textColor="#10B981"
                      android:gravity="center" />

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:paddingLeft="12dp"
                     android:orientation="vertical"
                     android:gravity="center_vertical">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="분실물 등록하기"
                         android:textStyle="bold"
                         android:textSize="18sp"
                         android:textColor="#222222" />

                                           <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="분실물을 등록하세요"
                          android:textSize="15sp"
                          android:textColor="#555555" />
                 </LinearLayout>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="→"
                     android:textSize="22sp"
                     android:textColor="#999999"
                     android:gravity="center_vertical" />
             </LinearLayout>

                         <!-- 2. 목록 보기 -->
                           <LinearLayout
                  android:id="@+id/btnList"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="16dp"
                  android:background="@drawable/rounded_card"
                  android:elevation="3dp"
                  android:padding="16dp"
                  android:orientation="horizontal">

                 <TextView
                     android:layout_width="42dp"
                     android:layout_height="42dp"
                     android:text="📋"
                     android:textSize="24sp"
                     android:textColor="#10B981"
                     android:gravity="center" />

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:paddingLeft="12dp"
                     android:orientation="vertical"
                     android:gravity="center_vertical">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="목록 보기"
                         android:textStyle="bold"
                         android:textSize="18sp"
                         android:textColor="#222222" />

                                           <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="등록된 분실물을 확인하세요"
                          android:textSize="15sp"
                          android:textColor="#555555" />
                 </LinearLayout>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="→"
                     android:textSize="22sp"
                     android:textColor="#999999"
                     android:gravity="center_vertical" />
             </LinearLayout>

                         <!-- 3. 후기 보기 -->
                           <LinearLayout
                  android:id="@+id/btnReview"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="16dp"
                  android:background="@drawable/rounded_card"
                  android:elevation="3dp"
                  android:padding="16dp"
                  android:orientation="horizontal">

                 <TextView
                     android:layout_width="42dp"
                     android:layout_height="42dp"
                     android:text="💬"
                     android:textSize="24sp"
                     android:textColor="#10B981"
                     android:gravity="center" />

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:paddingLeft="12dp"
                     android:orientation="vertical"
                     android:gravity="center_vertical">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="분실물 후기 보기"
                         android:textStyle="bold"
                         android:textSize="18sp"
                         android:textColor="#222222" />

                                           <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="성공 사례 먼저 읽기"
                          android:textSize="15sp"
                          android:textColor="#555555" />
                 </LinearLayout>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="→"
                     android:textSize="22sp"
                     android:textColor="#999999"
                     android:gravity="center_vertical" />
             </LinearLayout>

             <!-- 4. 기다리면서 게임하기 -->
                           <LinearLayout
                  android:id="@+id/btnGame"
                  android:layout_width="match_parent"
                  android:layout_height="80dp"
                  android:layout_marginTop="16dp"
                  android:layout_marginBottom="16dp"
                  android:background="@drawable/rounded_card"
                  android:elevation="1dp"
                  android:padding="16dp"
                  android:orientation="horizontal">

                                   <TextView
                      android:layout_width="42dp"
                      android:layout_height="42dp"
                      android:text="🎮"
                      android:textSize="24sp"
                      android:textColor="#6B7280"
                      android:gravity="center" />

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_weight="1"
                     android:paddingLeft="12dp"
                     android:orientation="vertical"
                     android:gravity="center_vertical">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="기다리면서 게임하기"
                         android:textStyle="bold"
                         android:textSize="18sp"
                         android:textColor="#222222" />

                                           <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="잠깐 쉬며 마음 진정"
                          android:textSize="15sp"
                          android:textColor="#777777" />
                 </LinearLayout>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:text="→"
                     android:textSize="22sp"
                     android:textColor="#999999"
                     android:gravity="center_vertical" />
             </LinearLayout>

            

        </LinearLayout>

                 <!-- 하단 쿠팡 배너 -->
         <LinearLayout
             android:id="@+id/bannerCoupang"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#FFE4B5"
             android:paddingLeft="16dp"
             android:paddingRight="12dp"
             android:paddingTop="12dp"
             android:paddingBottom="12dp"
             android:layout_marginBottom="16dp"
             android:orientation="vertical">

                                      <!-- 메인 텍스트와 버튼 -->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:gravity="center_vertical">

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:text="분실 방지 용품\n인기 상품 모음"
                     android:textColor="#000000"
                     android:textStyle="bold"
                     android:textSize="18sp"
                     android:gravity="center" />

                 <Button
                     android:id="@+id/btnBannerGo"
                     android:layout_width="wrap_content"
                     android:layout_height="42dp"
                     android:text="쿠팡에서 보기 ↗"
                     android:textSize="16sp"
                     android:textColor="#FFFFFF"
                     android:background="#007bff"
                     android:paddingLeft="16dp"
                     android:paddingRight="16dp" />
             </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
